<div class="jumbotron text-center">
    <h1>Time to update a program</h1>


    <div ng-controller="updateDietController">

        <div class="row">
            <div class="col-md-6 col-md-offset-3">

                <form ng-submit="updateDiet()"
                      style="margin-top:30px;">
                    <h3>Update Selected diet</h3>

                    <div class="form-group" align="center">
                        <input type="number"
                               class="form-control"
                               placeholder="Protein"
                               ng-model="formData.Protein"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>

                    <div class="form-group" align="center">
                        <input type="number"
                               class="form-control"
                               placeholder="Fats"
                               ng-model="formData.Fats"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>
                    <div class="form-group" align="center">
                        <input type="number"
                               class="form-control"
                               placeholder="Carbs"
                               ng-model="formData.Carbs"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>
                    <div class="form-group" align="center">
                        <input type="number"
                               class="form-control"
                               placeholder="Meal Number"
                               ng-model="formData.numMeals"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>
                    <div class="form-group" align="center">
                        <input type="text"
                               class="form-control"
                               placeholder="Meal Type"
                               ng-model="formData.MealType"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>
                    <div class="form-group" align="center">
                        <input type="number"
                               class="form-control"
                               placeholder="Meal Calories"
                               ng-model="formData.MealCalories"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>
                    <div class="form-group" align="center">
                        <input type="number"
                               class="form-control"
                               placeholder="Meal Time"
                               ng-model="formData.MealTime"
                               ng-style="{'width': 500 + 'px'}"
                               required="true">
                    </div>
                    <button type="button" class="btn btn-default" ng-click="updateDiet()">
                        Update
                    </button>
                </form>

            </div>
        </div>
    </div>